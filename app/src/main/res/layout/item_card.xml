<!-- item_card.xml -->
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <ImageView
        android:id="@+id/picture_card_IV"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/photo9_16"
        android:adjustViewBounds="true"
        app:layout_constraintDimensionRatio="1:1"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#80E65100"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/picture_card_IV">

        <View
            android:layout_width="match_parent"
            android:layout_height="16dp" />

        <TextView
            android:id="@+id/tiername_item_TV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TEST"
            android:textColor="@color/white"
            android:textSize="22sp"
            android:textStyle="bold"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="16dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center">


            <TextView
                android:id="@+id/species_item_TV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tierart"
                android:textStyle="bold"
                android:textSize="18sp"
                android:textColor="@color/white"/>
            <View
                android:layout_width="16dp"
                android:layout_height="match_parent"
                android:textStyle="bold"
                android:textSize="18sp"
                android:textColor="@color/white"/>

            <TextView
                android:id="@+id/breed_item_TV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Rasse"
                android:textStyle="bold"
                android:textSize="18sp"
                android:textColor="@color/white"/>

            <View
                android:layout_width="16dp"
                android:layout_height="match_parent"
                android:textStyle="bold"
                android:textSize="18sp"
                android:textColor="@color/white"/>

            <TextView
                android:id="@+id/gender_item_TV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Geschlecht"
                android:textStyle="bold"
                android:textSize="18sp"
                android:textColor="@color/white"/>
            <View
                android:layout_width="16dp"
                android:layout_height="match_parent"
                android:textStyle="bold"
                android:textSize="18sp"
                android:textColor="@color/white"/>

            <TextView
                android:id="@+id/birthday_item_TV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Geburtstag"
                android:textStyle="bold"
                android:textSize="18sp"
                android:textColor="@color/white"/>

            <View
                android:layout_width="16dp"
                android:layout_height="match_parent"
                android:textStyle="bold"
                android:textSize="18sp"
                android:textColor="@color/white"/>

        </LinearLayout>

    </LinearLayout>



</androidx.constraintlayout.widget.ConstraintLayout>

